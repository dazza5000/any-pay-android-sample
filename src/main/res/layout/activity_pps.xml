<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PPSActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/terminalLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Terminal Auth" />

            <Button
                android:id="@+id/btUSBConnect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="USB Connect" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/audioConnect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Audio Connnect" />

            <Button
                android:id="@+id/btConnect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BT Connect" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/keyedsale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Keyed Sale" />

            <Button
                android:id="@+id/btnStartEmvSale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Emv Sale" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/refRefund"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ref Refund" />

            <Button
                android:id="@+id/unrefRefund"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/NewRefund" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/signatureViewLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:visibility="gone">
        <com.anywherecommerce.android.sdk.component.SignatureView
            android:id="@+id/signatureView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"

            android:layout_weight="1"/>
        <Button
            android:id="@+id/btnSubmitSignature"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Submit"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/btnConnectAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect Audio"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnDisconnectAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disconnect Audio"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnConnectBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect BT"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnDisconnectBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disconnect BT"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnIsDeviceConnected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Is Connected?"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnStartEmv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start EMV"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnGetTransactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Transactions"
            android:textColor="@color/black" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtTextHarnessPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/black"
        android:gravity="bottom"
        android:textSize="12sp"
        android:scrollbars = "vertical"/>

</LinearLayout>