<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="5dp"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layoutSale"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#0062ac"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingBottom="5dip"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="5dip"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtSaleLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:padding="1dp"
                    android:singleLine="true"
                    android:text="@string/SALE"
                    android:textColor="#00fb1e"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/txtSaleAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="1dp"
                    android:singleLine="true"
                    android:text="$41.32"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutSignatureTax"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#0062ac"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingBottom="5dip"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="5dip"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtTaxLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:padding="1dp"
                    android:singleLine="true"
                    android:text="@string/TAX"
                    android:textColor="#fbec00"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/txtTaxAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="1dp"
                    android:singleLine="true"
                    android:text="$4.55"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutSignatureTip"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#0062ac"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingBottom="5dip"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="5dip"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtTipLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:padding="1dp"
                    android:singleLine="true"
                    android:text="@string/TIP"
                    android:textColor="#ff9c00"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/txtTipAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="1dp"
                    android:singleLine="true"
                    android:text="$4.13"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutSignatureInstallment"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#0062ac"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingBottom="5dip"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="5dip"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtInstallmentLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:padding="1dp"
                    android:singleLine="true"
                    android:text="@string/Installments"
                    android:textColor="#ff9c00"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/txtInstallmentValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="1dp"
                    android:singleLine="true"
                    android:text="99"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/signatureTileTotal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/txtTotalAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="60"
                    android:gravity="center_horizontal|bottom"
                    android:padding="1dp"
                    android:singleLine="true"
                    android:text="$50.00"
                    android:textColor="@color/textEntry"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/txtTotalLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="40"
                    android:gravity="center_horizontal|top"
                    android:padding="1dp"
                    android:singleLine="true"
                    android:text="@string/total"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:typeface="sans"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/signatureTileTip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/layoutTipText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txtLeaveTip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="10dip"
                        android:paddingTop="5dip"
                        android:singleLine="true"
                        android:text="@string/leaveAtip"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                    <LinearLayout
                        android:id="@+id/layoutTipButtons"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtLeaveTip"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip" >

                        <Button
                            android:id="@+id/buttonTip10"
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@drawable/button_tip"
                            android:paddingBottom="10dip"
                            android:paddingTop="10dip"
                            android:text="10%"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <Button
                            android:id="@+id/buttonTip15"
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@drawable/button_tip"
                            android:text="15%"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <Button
                            android:id="@+id/buttonTip20"
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@drawable/button_tip"
                            android:text="20%"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <Button
                            android:id="@+id/buttonTipOther"
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@drawable/button_tip"
                            android:text="@string/Other"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageCapturedCheck"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
		            android:layout_alignLeft="@id/layoutTipText"
		            android:layout_alignRight="@id/layoutTipText"
    		        android:layout_alignTop="@id/layoutTipText"
        		    android:layout_alignBottom="@id/layoutTipText"
                    android:contentDescription="CapturedCheckImage"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/sample_cheque"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txtAfterSigned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="@string/afteryouSigned"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:typeface="sans"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtPleaseSign"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:text="@string/SignBelowMSG"
            android:textColor="#f13b3b"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/buttonClear1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:background="@drawable/button_continue"
            android:gravity="center"
            android:padding="3dp"
            android:singleLine="true"
            android:text="@string/Clear"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutSignature"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@null" >

        <TextView
            android:id="@+id/txtSignPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="5dp"
            android:text="@string/SignBelowMSG"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:typeface="sans" />

        <com.anywherecommerce.android.sdk.sampleapp.utils.CanvasView
            android:id="@+id/customSignatureView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/border"
            android:gravity="center" />

        <com.BrandPay.Core.ui.components.CustomSignatureViewView
            android:id="@+id/customSignatureView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@null"
            android:gravity="center" />-->
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:background="@drawable/button_continue"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/DONE"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:background="@drawable/button_continue"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/Clear"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="bold"
            android:typeface="normal" />



    </LinearLayout>


</LinearLayout>